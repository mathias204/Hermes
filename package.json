{
  "name": "hermes-chatter",
  "version": "2.0.0",
  "description": "A terminal based texting application, with end-to-end encryption and cloud capabilities",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "TZ=Europe/Berlin npx --test-timeout=10000 vitest run",
    "test-mts": "TZ=Europe/Berlin find src/test/ -name '*.mts' | xargs npx vitest run",
    "test-mjs": "TZ=Europe/Berlin find build/ -name '*.mjs' | xargs npx vitest run",
    "coverage": "TZ=Europe/Berlin npx --test-timeout=10000 vitest run --coverage",
    "lint": "eslint src/",
    "lint-fix": "eslint -fix src/",
    "prettier-check": "prettier --check src/",
    "prettier": "prettier --write src/",
    "client": "npx tsx src/main/chat-client/chat-client-script.mts --cloud",
    "dev-client": "npx tsx src/main/chat-client/chat-client-script.mts --local",
    "dev-server-debug": "DEBUG=* npx tsx src/main/chat-server/chat-server-script.mts --local",
    "server-cloud": "npx tsx src/main/chat-server/chat-server-script.mts --cloud"
  },
  "author": "P&O CW 2023-2024 - GROUP 3",
  "license": "Apache-2.0",
  "devDependencies": {
    "@inquirer/prompts": "5.0.1",
    "@types/bcrypt": "5.0.2",
    "@types/debug": "4.1.12",
    "@types/figlet": "1.5.8",
    "@types/luxon": "3.4.2",
    "@types/node": "20.12.7",
    "@types/node-schedule": "2.1.7",
    "@types/nodemailer": "6.4.14",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@vitest/coverage-istanbul": "1.5.2",
    "@vitest/coverage-v8": "1.5.2",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "nodemailer": "6.9.13",
    "prettier": "3.2.5",
    "tsx": "4.7.3",
    "typescript": "5.4.5",
    "uuid": "9.0.1",
    "vitest": "1.5.2",
    "web": "0.0.2"
  },
  "dependencies": {
    "@types/blessed": "0.1.25",
    "@types/inquirer": "9.0.7",
    "bcrypt": "5.1.1",
    "blessed": "0.1.81",
    "blessed-contrib": "4.11.0",
    "chalk": "5.3.0",
    "debug": "4.3.4",
    "figlet": "1.7.0",
    "googleapis": "135.0.0",
    "inquirer": "9.2.19",
    "luxon": "3.4.4",
    "node-schedule": "2.1.1",
    "npm": "10.6.0",
    "socks": "2.8.3",
    "ws": "8.16.0",
    "zod": "3.23.4"
  },
  "overrides": {
    "xml2js": "^0.5.0"
  }
}
