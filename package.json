{
  "name": "chatter",
  "version": "1.0.0",
  "description": "P&O CW 2023-2024 chatter",
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test build": "TZ=Europe/Berlin npx vitest build",
    "test": "TZ=Europe/Berlin npx vitest run",
    "test-mts": "TZ=Europe/Berlin find src/ -name '*.mts' | xargs npx vitest run",
    "test-mjs": "TZ=Europe/Berlin find build/ -name '*.mjs' | xargs npx vitest run",
    "coverage": "TZ=Europe/Berlin vitest run --coverage",
    "test-watch": "TZ=Europe/Berlin vitest",
    "lint": "eslint src/",
    "lint-fix": "eslint -fix src/",
    "prettier-check": "prettier --check src/",
    "prettier": "prettier --write src/",
    "dev-client": "npx tsx src/chat-client/chat-client-script.mts --local",
    "dev-client-debug": "DEBUG=* npx tsx src/chat-client/chat-client-script.mts",
    "client": "npx tsx src/chat-client/chat-client-script.mts",
    "dev-server": "DEBUG=* npx tsx src/chat-server/chat-server-script.mts",
    "server": "npx tsx src/chat-server/chat-server-script.mts"
  },
  "author": "Dirk Nuyens, P&O CW 2023-2024",
  "license": "ISC",
  "devDependencies": {
    "@inquirer/prompts": "3.3.0",
    "@types/bcrypt": "5.0.2",
    "@types/debug": "4.1.10",
    "@types/figlet": "1.5.7",
    "@types/luxon": "3.3.3",
    "@types/node": "20.8.9",
    "@types/node-schedule": "2.1.4",
    "@types/nodemailer": "6.4.14",
    "@types/ws": "8.5.8",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@vitest/coverage-v8": "0.34.6",
    "dotenv": "16.3.1",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "nodemailer": "6.9.7",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "tsx": "3.14.0",
    "typescript": "5.2.2",
    "uuid": "9.0.1",
    "vitest": "0.34.6",
    "web": "0.0.2"
  },
  "dependencies": {
    "@types/inquirer": "9.0.7",
    "bcrypt": "5.1.1",
    "chalk": "5.3.0",
    "debug": "4.3.4",
    "figlet": "1.7.0",
    "googleapis": "129.0.0",
    "inquirer": "9.2.12",
    "luxon": "3.4.4",
    "mock-stdin": "1.0.0",
    "node-schedule": "2.1.1",
    "ws": "8.14.2",
    "zod": "3.22.4"
  }
}
